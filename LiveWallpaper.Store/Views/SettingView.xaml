<UserControl
    x:Class="LiveWallpaper.Store.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lan="clr-namespace:MultiLanguageManager;assembly=MultiLanguageManager.WPF"
    xmlns:local="clr-namespace:LiveWallpaper.Store.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:JsonConfiger.WPF;assembly=JsonConfiger.WPF"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <wpf:JsonConfierControl BorderBrush="#FF673AB7" DataContext="{Binding JsonConfierViewModel}" />
        <Button
            Grid.Row="1"
            Margin="10"
            Command="{Binding ApplyCommand}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            lan:Xaml.Key="setting_apply" />
    </Grid>
</UserControl>
